<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_app_color"
    android:paddingVertical="12dp">

    <ImageView
        android:id="@+id/image_episode"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/item_list_flow_app" />

    <TextView
        android:id="@+id/title_episode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/image_episode"
        app:layout_constraintTop_toTopOf="@id/image_episode"
        tools:text="CIRO GOMES - Flow Podcast #397" />

    <TextView
        android:id="@+id/description_episode"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/title_episode"
        app:layout_constraintTop_toBottomOf="@id/title_episode"
        tools:text="Ciro Gomes foi deputado, prefeito, governador, ministro e presidenciÃ¡vel. Twitter e Instagram: @cirogomes Youtube e Facebook: ..."/>

</androidx.constraintlayout.widget.ConstraintLayout>